#shop.row
  .col.col-lg-8
    %h2 {{prestashop.api.attributes.shop_name}}
    %hr
    %ul.breadcrumb{:"ng-show"=>"query"}
      %li 
        %a{:href=>'',:'ng-click'=>'filterCategory(false)'} Home
      %li.active {{query}}
    %ul#products.media-list
      %li.media.ng-cloak{"ng-repeat"=>"product in catalog.products.product | filter:search"}
        %a.pull-left{:href=>"#/products/{{product.id}}"}
          %img.media-object.thumbnail{:"ng-src"=>"{{product.associations.images.image.id | imagePath}}"}
        .media-body
          %h4.media-heading
            %a{:href=>"#/products/{{product.id}}"}
              {{product.name.language}}
            %span.label.label-info {{product.condition}}

          %span.badge{:"ng-repeat"=>"catId in product.associations.categories.category|getChild"}
            {{catNameById(catId)}}

          %p {{product.description.language.p}}
          
          .clearfix
            %a.btn.tiny.btn-default{:href=>"#/products/{{product.id}}"} See Details
            %a.btn.tiny.btn-primary Add to cart
        %hr

  .col.col-lg-4

    %h3 <i class="icon-shopping-cart"></i> Cart
    .well
      %a.btn.btn-primary Checkout

    %h3 <i class="icon-search"></i> Search
    %form
      %label What are you looking for ?
      %input.col-lg-12{:type=>"text",:"ng-model"=>"search.name"}

    %h3 <i class="icon-tags"></i> Categories
    %ul.nav.nav-pills.nav-stacked
      %li{:"ng-repeat"=>"category in categories.categories.category | filter:{id_parent:2}",:"ng-class"=>"{active : isSelected(category.id)}"}
        %a{:href=>'',:'ng-click'=>'filterCategory(category.id)'}
          {{category.name.language}}

    %h3 <i class="icon-unlock-alt"></i> Login
    .well
      %a.btn.btn-default Sign up
      %a.btn.btn-default Sign in

    %h3 <i class="icon-cogs"></i> Services Available
    %ul#services
      %li{"ng-repeat"=>"(service,service_data) in prestashop.api | with:'description'"}
        %strong {{service}} : 
        {{service_data.description}}
        
    %h3 <i class="icon-code"></i> We love :
    %ul
      %li{"ng-repeat"=>"thing in awesomeThings"}
        {{thing}}